# Server Configuration
PORT=5001

# Database Configuration
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=ClusterName
MONGO_CONN=your_mongodb_connection_string_here

# Authentication
# Use a strong, randomly generated secret for production
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
